header
    .container
        a(href="/")
            img.logo(src='img/logo.png' alt='')
        ul.menu
            each val in [{name: 'Product', url: ''}, {name: 'Blog', url: ''}, {name: 'Support', url: ''}, {name: 'Faq', url: ''}, {name: 'Offers', url: 'offers'}, {name: 'Contact', url: ''}]
                li.menu__item(class=((val.url == htmlWebpackPlugin.options.page) ? 'active' : ''))
                    a(href=((val.url ? (val.url + '.html') : '/')))= val.name
        button.btn.btn--white SIGN IN / LOG IN