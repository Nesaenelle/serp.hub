				.main-descr__price
					.price $99
					div
						.old-price__text old price
						.old-price $149
					a(href="offer-cart.html")
						button.btn.btn--green Buy Now

		.inner-container
			ul#imageGallery
				each val in [1,2,3,4,5,6]
					li(data-thumb="img/telephone.jpg" data-src="img/telephone.jpg")
						img(src="img/telephone.jpg", alt="")
					li(data-thumb="img/1.jpg" data-src="img/1.jpg")
						img(src="img/1.jpg", alt="")
			.video 
				iframe.video(src='https://www.youtube.com/embed/pat2c33sbog' frameborder='0' allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')

			each val in [{promo: true}, {promo: false}]
				h2.title.offer-title SERP.FARM OFFER
				.price-tag
					.price-tag__title Social Pandas
					.price-tag__sm-title One time purchase of
					if val.promo
						.price-tag__big-title promo-code
					else
						.price-tag__wrap
							.price-tag__big-title $99
							div
								.price-tag__old-price-text old price
								.price-tag__old-price $149
					.price-tag__black-line
					ul
						li LIVE Chat Support &amp; Skype Support (Fluent English Speaking)
						li Our Clients are Famous Instagrammers, Youtubers, Businesses &amp; Musicians
						li 100% Money Back Guarantee (Funds In Balance)
						li Offices Located in LA, Dubai &amp; London

					if val.promo
						a(href="offer-cart.html")
							button.btn.price-tag__btn Use Promo code
					else 
						a(href="offer-cart.html")
							button.btn.price-tag__btn Buy Now

			h2.title.offer-title SERP.FARM OFFER

			.price-tag-small--wrapper
				each val in [1,2,3]
					.price-tag-small
						.price-tag-small__title Social Pandas
						.price-tag-small__sm-title One time purchase of
						.price-tag-small__wrap
							div
								.price-tag-small__old-price-text old price
								.price-tag-small__old-price $149
							.price-tag-small__big-title $99
						.price-tag-small__black-line
